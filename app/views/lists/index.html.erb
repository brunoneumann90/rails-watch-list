<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80);">
  <div class="container">
    <h1 class="text-center">Save any kind of movies</h1>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fas fa-person-booth"></i></a>
  </div>
  <div class="footer-copyright">
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-dark' %>
  </div>
</div>

<div class="container">
  <% @lists.each do |list| %>
    <%= link_to list_path(list), class: 'text-decoration-none text-secondary' do %>
      <div class='card mt-3'>
        <p><%= list.name %></p>
      </div>
    <% end %>
  <% end %>
</div>
