<div class="container">
  <h1 class='text-center'>Add a new bookmark</h1>
  <div>
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.submit %>
    <% end %>
    <%= link_to 'Back', list_path(@list), class: 'btn btn-dark mt-3' %>
  </div>
</div>
